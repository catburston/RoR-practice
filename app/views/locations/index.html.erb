<div class="location index">
  <h1>MeetMe Locations</h1>
  <ul>
    <% @locations.each do |location| %>
      <li><p><%= link_to location.name, location_path(location), :class => 'location' %>
        <% unless location.city == nil %>
          <%= " - " + location.city %>
        <% end %>
        <% unless location.country == nil %>
          <%= ", " + location.country %>
        <% end %>
        <%= link_to 'edit', edit_location_path(location), :class => 'edit' %> <%= link_to 'delete', location_path(location), method: 'delete', confirm: "Are you sure you want to delete this Location?", :class => 'delete' %></p>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add a new Location', new_location_path(@location), :class => 'new' %>
    <br>
</div>