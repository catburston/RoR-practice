<div class="location show">
  <h1>MeetMe Location</h1>
  <p></p><strong>Location Name: </strong><%= @location.name %></p>
  <p><strong>City: </strong><%= @location.city %></p>
  <p><strong>Country: </strong><%= @location.country %></p>
  <p><strong>Description: </strong><%= @location.description %></p>
  <hr>
  <p><%= link_to 'See visits for this Location', location_visits_path(@location) %></p>
  <hr>

  <p><%= link_to 'edit', edit_location_path(@location) %> <%= link_to 'delete', location_path(@location), method: 'delete', confirm: "Are you sure you want to delete this Location?" %></p>
  <p><%= link_to 'return to Locations', locations_path %></p>
</div>