<div class="location show">
  <h1>MeetMe Location</h1>
  <strong>Location Name: </strong><%= @location.name %> <br>
  <strong>City: </strong><%= @location.city %><br>
  <strong>Country: </strong><%= @location.country %><br>
  <strong>Description: </strong><%= @location.description %>
  <hr>
  <%= link_to 'See visits for this Location', location_visits_path(@location) %>
  <hr>

  <%= link_to 'edit', edit_location_path(@location) %>
  <br>
  <%= link_to 'delete', location_path(@location), method: 'delete', confirm: "Are you sure you want to delete this Location?" %>
</div>