<div class="user show">
  <%= flash_message %>

  <h1>MeetMe User <em><%= @user.user_name %></em></h1>

  <p><strong><%= @user.user_name %></strong> (<%= @user.user_firstname %> <%= @user.user_lastname %>)</p>
    <% @visits.each do |visit| %>
      <li><p><strong><%= link_to visit.location.name, user_visit_path(@user, visit) %></strong></p>
      <p><strong><%= visit.from_date %></strong> to <strong><%= visit.to_date %></strong></p>
    <% end %>

  <hr>

  <p><%= link_to 'edit', edit_user_path(@user), :class => 'edit' %> <%= link_to 'delete', user_path(@user), method: 'delete', confirm: "Are you sure you want to delete this user?", :class => 'delete' %></p>

  <hr>

  <p><%= link_to 'Return to all Users', users_path, :class => 'user' %></p>
</div>