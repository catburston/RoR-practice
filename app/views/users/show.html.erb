<div class="user show">
  <%= flash_message %>

  <h1>MeetMe User <em><%= @user.user_name %></em></h1>

  <strong><%= @user.user_name %></strong> (<%= @user.user_firstname %> <%= @user.user_lastname %>)
  <br>
  <strong>User since: </strong><%= @user.created_at %>

  <hr />

  <%= link_to 'edit', edit_user_path(@user) %>
  <br>
  <%= link_to 'delete', user_path(@user), method: 'delete', confirm: "Are you sure you want to delete this user?" %>

  <hr>

  <%= link_to 'Return to all Users', users_path(@user) %>
</div>