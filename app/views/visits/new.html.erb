<div class="visit new">
  <%= flash_message %>

  <% if @visit.errors.any? %>
    <ul>
      <% @visit.errors.full_messages.each do | error_message | %>
      <li><%= error_message %></li>
      <% end %>
    </ul>
  <% end %>


  <%= form_for [ @location, @visit ] do | f | %>
    <%= f.label :user_id %><%= f.text_field :user_id %>
    <br />
    <%= f.datetime_select( :from_date, default: Time.now + 1.day ) %>
    <br />
    <%= f.datetime_select( :to_date, default: Time.now + 1.day ) %>
    <br />
    <%= f.submit "Save visit" %>
  <% end %>

  <hr>

  <%= link_to 'Cancel', location_visits_path(@location) %>
</div>