<div class="visit show">
  <%= flash_message %>

  <h1>MeetMe Visit</h1>

  <h2>Location: </h2><%= @visit.location.name %>

  <p><%= @visit.user.user_name %>, <%= @visit.from_date %></a> until <%= @visit.to_date %></p>

  <hr />

  <%= link_to 'edit', edit_location_visit_path(@location, @visit) %>
  <br>
  <%= link_to 'delete', location_visit_path(@location, @visit), method: 'delete', confirm: "Are you sure you want to delete this visit?" %>

  <hr>

  <%= link_to 'Return to all Visits', location_visits_path(@location) %>
</div>