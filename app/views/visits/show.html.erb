<div class="visit show">
  <%= flash_message %>

  <h1>MeetMe Visit</h1>

  <h2>Location: <%= @visit.location.name %></h2>
  <h4><%= @visit.location.city %>, <%= @visit.location.country %></h4>

  <p><%= @visit.user.user_name%> will be here from:</p>
  <p><%= @visit.from_date %></a> until <%= @visit.to_date %></p>

  <hr />

  <p><%= link_to 'edit', edit_location_visit_path(@location, @visit) %> <%= link_to 'delete', location_visit_path(@location, @visit), method: 'delete', confirm: "Are you sure you want to delete this visit?" %></p>

  <hr>

  <p><%= link_to 'Return to all Visits', location_visits_path(@location) %></p>
</div>